<h2 class="text-center">Forgot your password?</h2>

<style>
  body {
    background-color: #f5f5f5;
    color: #333;
  }

  .form-container {
    background-color: #fff; /* Background color for the form container */
    padding: 30px;
    border-radius: 8px; /* More rounded corners */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 400px; /* Set a maximum width */
    margin: auto; /* Center the form on the page */
  }

  .field {
    margin-bottom: 20px; /* Space between form elements */
  }

  .form-control {
    width: 100%;
    padding: 12px; /* Increase padding for a better feel */
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease; /* Smooth transition for focus effect */
  }

  .form-control:focus {
    border-color: #8b4513; /* Change border color on focus */
    outline: none; /* Remove default outline */
    box-shadow: 0 0 5px rgba(139, 69, 19, 0.5); /* Subtle shadow on focus */
  }

  .actions {
    text-align: center; /* Center the button */
  }

  .btn {
    display: inline-block;
    padding: 12px 24px; /* Increase padding for a larger button */
    margin-top: 10px;
    color: #fff;
    background-color: #8b4513; /* Matching button color */
    text-align: center;
    border: none;
    border-radius: 5px; /* More rounded corners */
    cursor: pointer;
    transition: background-color 0.3s ease; /* Smooth transition for hover effect */
  }

  .btn:hover {
    background-color: #7a3e11; /* Darker shade on hover */
  }

  .login-link {
    display: block; /* Make it a block element */
    text-align: center; /* Center the link */
    margin-top: 15px; /* Space above the link */
  }
</style>

<div class="form-container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn' %>
    </div>
  <% end %>

  <div class="login-link">
    <%= link_to "Remembered your password? Log in", new_session_path(resource_name), class: "btn btn-link" %>
  </div>
</div>

<%= render "devise/shared/links" %>
