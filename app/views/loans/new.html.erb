<h1>New Loan Request</h1>

<%= form_with(model: @loan, local: true) do |form| %>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, step: 0.01, required: true %>
  </div>
  
  <div>
    <%= form.label :interest_rate %>
    <%= form.number_field :interest_rate, step: 0.01, required: true %>
  </div>
  
  <div>
    <%= form.submit 'Request Loan', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', loans_path, class: 'btn btn-secondary' %>
