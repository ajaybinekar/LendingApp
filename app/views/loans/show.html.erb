<h1>Loan Details</h1>

<p>
  <strong>Amount:</strong>
  <%= @loan.amount %>
</p>
<p>
  <strong>Interest Rate:</strong>
  <%= @loan.interest_rate %>
</p>
<p>
  <strong>Status:</strong>
  <%= @loan.status.humanize %>
</p>

<% if @loan.status == "open" && @loan.user == current_user  %>
  <%= button_to "Repay", repay_loan_path(@loan), method: :post, class: 'btn btn-warning' %>
<% end %>

<%= link_to 'Back to Loans', loans_path, class: 'btn btn-secondary' %>